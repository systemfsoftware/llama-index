{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "clean": {
      "outputs": ["dist/**", ".tshy", ".tshy-build"]
    },
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["src/**/*.ts", "tsconfig.json", "tsconfig.*.json"],
      "outputs": ["dist/**", ".tshy", ".tshy-build"]
    },
    "pack": {
      "dependsOn": ["build"],
      "inputs": ["dist/**"],
      "outputs": ["package.tgz"]
    },
    "test": {
      "dependsOn": ["build"],
      "inputs": [
        "tests/**/*.test.ts",
        "tests/**/*.test.cjs",
        "tests/**/*.test.mjs"
      ]
    }
  }
}
