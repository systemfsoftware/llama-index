{
  "typescript": {
    "lineWidth": 120,
    "indentWidth": 2,
    "useTabs": false,
    "quoteStyle": "preferSingle",
    "semiColons": "asi",
    "newLineKind": "lf"
  },
  "markdown": {},
  "includes": ["**/*.{ts,tsx,js,jsx,cjs,mjs,json}"],
  "excludes": ["**/node_modules", "dist", ".tshy", ".tshy-build"],
  "plugins": [
    "https://plugins.dprint.dev/json-0.19.3.wasm",
    "https://plugins.dprint.dev/markdown-0.17.8.wasm",
    "https://plugins.dprint.dev/typescript-0.91.8.wasm"
  ]
}
